<h2>Queues</h2>
<h3>Overview</h3>

<div class="no-padding">
  <table id="queueList" class="table">
    <thead>
      <th>Host</th>
      <th>Name</th>
      <th>Waiting</th>
      <th>Active</th>
      <th>Completed</th>
      <th>Failed</th>
      <th>Delayed</th>
      <th>Paused</th>
    </thead>
    <tbody>
      {{#each queues}}
        <tr>
        <td>{{ this.hostId }}</td>
        <td><a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.name }}</a></td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/waiting">
            <span class="badge">{{ this.jobs.waiting }}</span>
          </a>
        </td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/active">
            <span class="badge">{{ this.jobs.active }}</span>
          </a>
        </td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/completed">
            <span class="badge">{{ this.jobs.completed }}</span>
          </a>
        </td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/failed">
            <span class="badge">{{ this.jobs.failed }}</span>
          </a>
        </td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/delayed">
            <span class="badge">{{ this.jobs.delayed }}</span>
          </a>
        </td>
        <td>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/paused">
            <span class="badge">{{ this.jobs.paused }}</span>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}

{{#contentFor 'script'}}
  new Tablesort(document.getElementById('queueList'));
{{/contentFor}}
